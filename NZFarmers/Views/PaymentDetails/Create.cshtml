@model NZFarmers.Models.PaymentDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Payment Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- User Selection Dropdown -->
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="@(ViewData["UserID"] as SelectList)">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <!-- Amount Input -->
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Status Dropdown -->
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@(Html.GetEnumSelectList<PaymentStatus>())">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Method Dropdown -->
            <div class="form-group">
                <label asp-for="Method" class="control-label"></label>
                <select asp-for="Method" class="form-control" asp-items="@(Html.GetEnumSelectList<PaymentMethod>())">
                    <option value="">-- Select Method --</option>
                </select>
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>

            <!-- CreatedAt Input -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
