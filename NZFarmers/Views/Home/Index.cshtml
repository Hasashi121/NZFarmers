@model IEnumerable<NZFarmers.Models.FarmerProduct>

@{
    ViewData["Title"] = "NZFarmers Marketplace";
}

<!-- Stylesheets -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    :root {
        --primary-color: #1e8a3e;
        --accent-color: #ff6b35;
        --light-accent: #f9f7f3;
        --dark-text: #2d3047;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Arial, sans-serif;
        color: var(--dark-text);
    }

    .marketplace-header {
        background: linear-gradient(rgba(30, 138, 62, 0.6), rgba(30, 138, 62, 0.6)), url('/uploads/Background.jpeg');
        background-size: cover;
        background-position: center center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: white;
        padding: 0;
        border-radius: 0;
        text-align: center;
        margin-bottom: 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 100vw; 
        margin-left: calc(-50vw + 50%); 
    }

        .marketplace-header h1 {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.7);
            letter-spacing: -1px;
        }

    .header-subtitle {
        font-size: 1.4rem;
        opacity: 0.95;
        margin-top: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 300;
        margin-bottom: 2.5rem;
    }

    .hero-btn {
        background-color: var(--accent-color);
        border: none;
        padding: 15px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        font-weight: 600;
    }

        .hero-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255, 107, 53, 0.4);
            color: white;
        }

    /* Enhanced Filter Bar */
    .filter-bar {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
        margin-top: -80px;
        position: relative;
        z-index: 2;
    }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(30, 138, 62, 0.25);
        }

    .filter-button {
        background: linear-gradient(135deg, var(--primary-color), #25a244);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .filter-button:hover {
            background: linear-gradient(135deg, #176e31, #1e7a33);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(30, 138, 62, 0.4);
        }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .category-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: var(--accent-color);
        color: white;
        padding: 5px 15px;
        font-size: 0.85rem;
        border-radius: 25px;
        font-weight: 600;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 1;
    }

    .card-body {
        padding: 25px;
    }

    .card-title {
        font-weight: 700;
        margin-bottom: 10px;
        color: var(--primary-color);
        font-size: 1.3rem;
        line-height: 1.4;
    }

    .farm-name {
        color: #6c757d;
        font-weight: 500;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        font-size: 0.95rem;
    }

        .farm-name i {
            margin-right: 8px;
            color: #25a244;
        }

    .price-tag {
        font-weight: 700;
        color: var(--primary-color);
        font-size: 1.4rem;
        margin-bottom: 12px;
    }

    .location {
        display: flex;
        align-items: center;
        color: #6c757d;
        margin-bottom: 20px;
        font-size: 0.85rem;
    }

        .location i {
            margin-right: 5px;
            color: var(--accent-color);
        }

    .view-btn {
        background: linear-gradient(135deg, var(--primary-color), #25a244);
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 600;
        width: 100%;
        color: white;
    }

        .view-btn:hover {
            background: linear-gradient(135deg, #176e31, #1e7a33);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(30, 138, 62, 0.4);
            color: white;
        }

    .empty-results {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

        .empty-results i {
            font-size: 4rem;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .empty-results h3 {
            color: var(--primary-color);
            margin-bottom: 15px;
        }

    .banner-section {
        background-color: var(--light-accent);
        padding: 50px 0;
        margin: 40px 0;
        border-radius: 12px;
    }

    .banner-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .banner-text {
        flex: 1;
        padding-right: 20px;
    }

    .banner-image {
        flex: 1;
        text-align: center;
    }

        .banner-image img {
            max-width: 100%;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .section-heading {
        font-weight: 700;
        margin-bottom: 20px;
        position: relative;
        display: inline-block;
        padding-bottom: 10px;
        color: var(--primary-color);
        font-size: 2.5rem;
        text-align: center;
        width: 100%;
        margin-bottom: 50px;
    }

        .section-heading::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background-color: var(--accent-color);
            border-radius: 2px;
        }

   

    .marketplace-header h1 {
        font-size: 2.8rem;
    }

    .header-subtitle {
        font-size: 1.2rem;
    }

    .section-heading {
        font-size: 2rem;
    }

    .banner-content {
        flex-direction: column;
    }

    .banner-text {
        padding-right: 0;
        margin-bottom: 30px;
    }

    }

    

    .header-subtitle {
        font-size: 1.1rem;
        padding: 0 15px;
    }

    }
</style>

<!-- Full-Screen Hero Section with Background -->
<div class="marketplace-header">
    <div class="container">
        <div class="hero-content">
            <h1><i class="fas fa-leaf me-3"></i>NZFarmers Marketplace</h1>
            <p class="header-subtitle">Fresh from our farms to your table - Supporting local New Zealand farmers</p>
            <a asp-controller="FarmerProducts" asp-action="Index" class="hero-btn">
                <i class="fas fa-shopping-basket me-2"></i>Shop Now
            </a>
        </div>
    </div>
</div>

<!-- Enhanced Filter Bar -->
<div class="container">
    <div class="filter-bar">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label"><i class="fas fa-tag me-1"></i>Category</label>
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Enum.GetValues(typeof(NZFarmers.Models.ProductCategory)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label"><i class="fas fa-search me-1"></i>Search</label>
                <input type="text" name="search" class="form-control" placeholder="Search products or farms..." value="@ViewData["SearchQuery"]" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success filter-button w-100">
                    <i class="fas fa-filter me-2"></i>Apply Filters
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Featured Products Section -->
<div class="container" id="products">
    <h2 class="section-heading mb-4">Featured Products</h2>

    @if (!Model.Any())
    {
        <div class="empty-results">
            <i class="fas fa-search fa-3x mb-3 text-muted"></i>
            <h3>No products found</h3>
            <p class="text-muted">Try adjusting your search criteria or browse all categories</p>
            <a href="@Url.Action("Index")" class="btn btn-outline-success mt-3">View All Products</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 position-relative">
                        <span class="category-badge">@product.Category</span>
                        <img src="@(string.IsNullOrEmpty(product.ImageURL) ? "/images/default-product.jpg" : product.ImageURL)"
                             class="card-img-top" alt="@product.ProductName" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.ProductName</h5>
                            <div class="farm-name">
                                <i class="fas fa-tractor"></i> @product.Farmer.FarmName
                            </div>
                            <div class="price-tag">@product.Price.ToString("C")</div>
                            <div class="location">
                                <i class="fas fa-map-marker-alt"></i> @product.Farmer.City, New Zealand
                            </div>
                            <a asp-controller="FarmerProducts" asp-action="Details" asp-route-id="@product.FarmerProductID"
                               class="btn btn-primary view-btn mt-auto">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "FarmerProducts")" class="btn btn-outline-success">
                <i class="fas fa-list me-2"></i>View All Products
            </a>
        </div>
    }
</div>

<!-- Banner Section -->
<div class="container mt-5">
    <div class="banner-section">
        <div class="container">
            <div class="banner-content">
                <div class="banner-text">
                    <h2 class="section-heading">Why Choose NZFarmers?</h2>
                    <ul class="list-unstyled">
                        <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i> Support local New Zealand farmers</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i> Fresh, high-quality produce</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i> Transparent sourcing and sustainable practices</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i> Reduce food miles and environmental impact</li>
                    </ul>
                    <a asp-controller="Home" asp-action="LearnMore" class="btn btn-outline-success mt-3">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
                <div class="banner-image d-none d-md-block">
                    <img src="/images/farm-landscape.jpg" alt="New Zealand Farm" onerror="this.src='/images/default-banner.jpg';" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>