@model IEnumerable<NZFarmers.Models.FarmerProduct>

@{
    ViewData["Title"] = "NZFarmers Marketplace";
}

<!-- Stylesheets -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .marketplace-header {
        background-color: #28a745;
        color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }

    .filter-bar {
        display: flex;
        justify-content: space-between;
        background: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .category-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #ff5733;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        border-radius: 5px;
    }
</style>

<!-- Page Header -->
<div class="marketplace-header">
    <h1>NZFarmers Marketplace</h1>
    <p>Connecting local farmers and buyers</p>
</div>

<!-- Filter Bar -->
<div class="container mt-4">
    <div class="filter-bar">
        <form method="get" class="row w-100">
            <div class="col-md-3">
                <select name="category" class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var category in Enum.GetValues(typeof(NZFarmers.Models.ProductCategory)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" name="search" class="form-control" placeholder="Search products..." />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success w-100">Apply Filters</button>
            </div>
        </form>
    </div>
</div>

<!-- Product Listings -->
<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <span class="category-badge">@product.Category</span>
                    <img src="@product.ImageURL" class="card-img-top" alt="@product.Product.ProductName">
                    <div class="card-body">
                        <h5 class="card-title">@product.Product.ProductName</h5>
                        <p class="text-muted">By: @product.Farmer.FarmName</p>
                        <p class="text-success fs-5">@product.Price.ToString("C")</p>
                        <p class="text-muted"><i class="fas fa-map-marker-alt"></i> @product.Farmer.City</p>
                        <a asp-controller="FarmerProducts" asp-action="Details" asp-route-id="@product.FarmerProductID" class="btn btn-primary w-100">
                            View Product
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
