<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NZFarmers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NZFarmers.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NZFarmers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Users & Farmers Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="usersFarmersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Users & Farmers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="usersFarmersDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Farmers" asp-action="Index">Farmers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ratings" asp-action="Index">Ratings</a></li>
                            </ul>
                        </li>

                        <!-- Orders & Products Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="ordersProductsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Orders & Products
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ordersProductsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="OrderDetails" asp-action="Index">Order Details</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="FarmerProducts" asp-action="Index">Farmer Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PaymentDetails" asp-action="Index">Payments</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="DeliveryTrackings" asp-action="Index">Delivery Tracking</a></li>
                            </ul>
                        </li>

                        <!-- Events & Educational Content Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="eventsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Events & Education
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="eventsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="FarmerMarkets" asp-action="Index">Farmer Markets</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="FarmerMarketEvents" asp-action="Index">Market Events</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="FarmerMarketParticipations" asp-action="Index">Market Participation</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EducationalContents" asp-action="Index">Educational Content</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NZFarmers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
