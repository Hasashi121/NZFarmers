@model IEnumerable<NZFarmers.Models.EducationalContent>

@{
    ViewData["Title"] = "Educational Resources";
}

<div class="educational-content-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">Learn & Grow</h1>
                    <p class="hero-subtitle">Discover farming tips, sustainable practices, and educational resources to help you succeed</p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                    {
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus"></i> Add New Resource
                        </a>
                    }
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <i class="fas fa-seedling"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Educational Content Grid -->
    <div class="content-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="educational-card">
                            <div class="card-header">
                                <div class="category-badge">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <div class="card-date">
                                    @item.CreatedAt.ToString("MMM dd, yyyy")
                                </div>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-description">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        @(item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description)
                                    }
                                </p>
                            </div>

                            <div class="card-actions">
                                <a href="@item.ContentURL" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-external-link-alt"></i> View Resource
                                </a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                                {
                                    <div class="admin-actions">
                                        <a asp-action="Edit" asp-route-id="@item.ContentID" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ContentID" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ContentID" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h3>No Educational Resources Yet</h3>
                    <p>Check back soon for helpful farming tips and resources!</p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                    {
                        <a asp-action="Create" class="btn btn-primary">Add First Resource</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .educational-content-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, #6a994e 0%, #386641 100%);
        color: white;
        padding: 80px 0;
        margin-bottom: 60px;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .hero-image {
        text-align: center;
        font-size: 120px;
        opacity: 0.3;
    }

    .content-section {
        padding: 0 0 80px 0;
    }

    .educational-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

        .educational-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

    .card-header {
        padding: 20px 20px 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .category-badge {
        background: linear-gradient(135deg, #6a994e, #386641);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .card-date {
        background: #f8f9fa;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.875rem;
        color: #6c757d;
        font-weight: 500;
    }

    .card-body {
        padding: 20px;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .card-description {
        color: #718096;
        line-height: 1.6;
        margin-bottom: 0;
    }

    .card-actions {
        padding: 0 20px 20px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6a994e, #386641);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #386641, #2d5a33);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(106, 153, 78, 0.4);
        }

    .admin-actions {
        display: flex;
        gap: 8px;
    }

        .admin-actions .btn {
            width: 35px;
            height: 35px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .empty-icon {
        font-size: 80px;
        color: #e2e8f0;
        margin-bottom: 30px;
    }

    .empty-state h3 {
        color: #2d3748;
        margin-bottom: 15px;
    }

    .empty-state p {
        color: #718096;
        margin-bottom: 30px;
    }

    .hero-section {
        padding: 50px 0;
    }

    .card-actions {
        flex-direction: column;
        gap: 15px;
        align-items: stretch;
    }

    .admin-actions {
        justify-content: center;
    }

    }
</style>