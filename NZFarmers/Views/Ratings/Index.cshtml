    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #218838, #1ea584);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-inner

    {
