@model IEnumerable<NZFarmers.Models.Rating>

@{
    ViewData["Title"] = "Farmer Ratings & Reviews";
}

<div class="ratings-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-inner">
                <div class="hero-text">
                    <h1 class="hero-title">Farmer Ratings & Reviews</h1>
                    <p class="hero-subtitle">See what customers are saying about our local farmers</p>
                </div>
                <div class="hero-actions">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus"></i> Add Review
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Ratings Content -->
    <div class="ratings-section">
        <div class="ratings-content">
            @if (Model.Any())
            {
                <div class="ratings-grid">
                    @foreach (var rating in Model)
                    {
                        <div class="rating-card">
                            <div class="card-header">
                                <div class="user-info">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="user-details">
                                        <h6 class="user-name">@rating.User.Email</h6>
                                        <small class="review-date">@rating.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                                <div class="star-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= rating.RatingValue)
                                        {
                                            <i class="fas fa-star filled"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star empty"></i>
                                        }
                                    }
                                    <span class="rating-number">(@rating.RatingValue/5)</span>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="farmer-info">
                                    <h5 class="farmer-name">
                                        <i class="fas fa-tractor"></i>
                                        @rating.Farmer.FarmName
                                    </h5>
                                    <p class="farmer-location">
                                        <i class="fas fa-map-marker-alt"></i>
                                        @rating.Farmer.Address
                                    </p>
                                </div>

                                @if (!string.IsNullOrEmpty(rating.Comment))
                                {
                                    <div class="review-comment">
                                        <p>"@rating.Comment"</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="review-comment no-comment">
                                        <p><em>No written review provided</em></p>
                                    </div>
                                }
                            </div>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="card-actions">
                                    <a asp-action="Details" asp-route-id="@rating.RatingID" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@rating.RatingID" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@rating.RatingID" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3>No Reviews Yet</h3>
                    <p>Be the first to review our amazing local farmers!</p>
                    @if (User.IsInRole("Consumer"))
                    {
                        <a asp-action="Create" class="btn btn-primary">Write First Review</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

