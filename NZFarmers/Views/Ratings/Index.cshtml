        text-align: center;
    }

    .hero-title {
        font-size: 2rem;
    }

    .ratings-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .card-header {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
    }

    .star-rating {
        align-self: flex-start;
    }

    .hero-content,
    .ratings-content {
        padding: 0 1rem;
    }

    }

    @@media (max-width: 480px) {
        .ratings-grid

