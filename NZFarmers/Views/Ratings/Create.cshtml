@model NZFarmers.Models.Rating

@{
    ViewData["Title"] = "Write a Review";
}

<div class="create-rating-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-inner">
                <div class="hero-text">
                    <h1 class="hero-title">Write a Review</h1>
                    <p class="hero-subtitle">Share your experience with our local farmers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="form-section">
        <div class="form-content">
            <div class="form-card">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="form-label">Reviewer</label>
                        <div class="current-user-display">
                            <i class="fas fa-user"></i>
                            <span>You are logged in as: @User.Identity.Name</span>
                        </div>
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId" style="display: none;">
                            <option value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" selected>@User.Identity.Name</option>
                        </select>
                        <small class="form-text text-muted">Review will be posted under your account</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="FarmerID" class="form-label">Farmer to Review</label>
                        <select asp-for="FarmerID" class="form-select" asp-items="ViewBag.FarmerID">
                            <option value="">Select Farmer to Review</option>
                        </select>
                        <span asp-validation-for="FarmerID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Rating (1-10)</label>
                        <div class="star-rating-input">
                            <input asp-for="RatingValue" class="form-control rating-slider" type="range" min="1" max="10" value="10" oninput="updateRatingDisplay(this.value)" />
                            <div class="rating-display">
                                <span class="rating-number" id="ratingNumber">10</span>/10
                                <div class="rating-stars" id="ratingStars">
                                    ★★★★★☆☆☆☆☆
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="RatingValue" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Comment" class="form-label">Review Comment (Optional)</label>
                        <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Share your experience with this farmer..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <!-- Hidden CreatedAt field - automatically set to current time -->
                    <input asp-for="CreatedAt" type="hidden" value="@DateTime.Now" />

                    <div class="form-actions">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-paper-plane"></i> Submit Review
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Back to Reviews
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .create-rating-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        width: 100%;
    }

    .hero-section {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 60px 0;
        margin-bottom: 40px;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
    }

    .hero-content {
        width: 100%;
        padding: 0 2rem;
    }

    .hero-inner {
        max-width: 1400px;
        margin: 0 auto;
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        margin: 0;
    }

    .form-section {
        padding: 0 0 60px 0;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
    }

    .form-content {
        width: 100%;
        padding: 0 2rem;
    }

    .form-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: #2d3748;
        display: block;
    }

    .form-control,
    .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
            outline: none;
        }

    .current-user-display {
        background: #f8f9fa;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 5px;
    }

        .current-user-display i {
            color: #28a745;
            font-size: 1.1rem;
        }

        .current-user-display span {
            font-weight: 500;
            color: #2d3748;
        }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .star-rating-input {
        padding: 15px 0;
    }

    .rating-slider {
        margin-bottom: 15px;
        height: 8px;
        background: #e2e8f0;
        border-radius: 5px;
        outline: none;
        -webkit-appearance: none;
    }

        .rating-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 25px;
            height: 25px;
            border-radius: 50%;
            background: #28a745;
            cursor: pointer;
        }

    .rating-display {
        text-align: center;
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
    }

    .rating-number {
        font-size: 2rem;
        font-weight: bold;
        color: #28a745;
    }

    .rating-stars {
        font-size: 1.5rem;
        color: #ffc107;
        margin-top: 5px;
        letter-spacing: 2px;
    }

    .form-actions {
        margin-top: 30px;
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        border-radius: 10px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #218838, #1ea584);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-outline-secondary {
        background: white;
        color: #6c757d;
        border: 2px solid #e2e8f0;
    }

        .btn-outline-secondary:hover {
            background: #f8f9fa;
            color: #495057;
            border-color: #cbd3da;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2rem;
    }

    .form-card {
        padding: 30px 20px;
    }

    .form-actions {
        flex-direction: column;
    }

    .hero-content,
    .form-content {
        padding: 0 1rem;
    }

    }
</style>

<script>
    // Set the user dropdown to current user automatically
    document.addEventListener('DOMContentLoaded', function() {
        const userSelect = document.querySelector('select[name="UserId"]');
        const currentUserId = '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value';
        if (userSelect && currentUserId) {
            userSelect.value = currentUserId;
        }
    });

    function updateRatingDisplay(value) {
        document.getElementById('ratingNumber').textContent = value;

        const stars = '★'.repeat(value) + '☆'.repeat(10 - value);
        document.getElementById('ratingStars').textContent = stars;

        // Update the color based on rating
        const ratingNumber = document.getElementById('ratingNumber');
        if (value <= 3) {
            ratingNumber.style.color = '#dc3545'; // Red
        } else if (value <= 6) {
            ratingNumber.style.color = '#ffc107'; // Yellow
        } else {
            ratingNumber.style.color = '#28a745'; // Green
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}