@model NZFarmers.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- UserId Dropdown -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- FarmerID Dropdown -->
            <div class="form-group">
                <label asp-for="FarmerID" class="control-label"></label>
                <select asp-for="FarmerID" class="form-control" asp-items="ViewBag.FarmerID"></select>
                <span asp-validation-for="FarmerID" class="text-danger"></span>
            </div>

            <!-- RatingValue -->
            <div class="form-group">
                <label asp-for="RatingValue" class="control-label">Rating Value</label>
                <input asp-for="RatingValue" class="form-control" />
                <span asp-validation-for="RatingValue" class="text-danger"></span>
            </div>

            <!-- Comment -->
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <!-- CreatedAt -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">Created At</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
