        margin-top: 40px;
        text-align: center;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 2rem;
    }

    .pagination {
        background: white;
        border-radius: 50px;
        padding: 0.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border: 1px solid #f0f0f0;
        display: inline-flex;
        margin-bottom: 1rem;
    }

    .page-item .page-link {
        border: none;
        padding: 0.75rem 1rem;
        margin: 0 0.25rem;
        border-radius: 25px;
        color: #495057;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

