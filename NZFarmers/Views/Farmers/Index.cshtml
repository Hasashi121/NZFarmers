@model NZFarmers.PaginatedList<NZFarmers.Models.Farmers>
@{
    ViewData["Title"] = "NZ Farmers Directory";
}

<div class="farmers-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-inner">
                <div class="hero-text">
                    <h1 class="hero-title">
                        <i class="fas fa-leaf"></i> NZ Farmers Directory
                    </h1>
                    <p class="hero-subtitle">Fresh from our farms to your table - Supporting local New Zealand farmers</p>
                </div>
                <div class="hero-actions">
                    @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                    {
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus"></i> Add New Farm
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-section">
        <div class="search-content">
            <div class="search-card">
                <form asp-action="Index" method="get">
                    <div class="search-grid">
                        <div class="search-field">
                            <label for="searchString" class="form-label">Search Farmers</label>
                            <input type="text"
                                   class="form-control"
                                   id="searchString"
                                   name="searchString"
                                   value="@ViewData["CurrentFilter"]"
                                   placeholder="Search by farm name, city, region, or address...">
                        </div>
                        <div class="search-field">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-success btn-search">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sorting Controls -->
    <div class="sorting-section">
        <div class="sorting-content">
            <div class="sorting-card">
                <span class="sort-label">Sort by:</span>
                <div class="sort-buttons">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["NameSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="sort-link">
                        <i class="fas fa-tractor"></i> Farm Name
                    </a>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CitySortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="sort-link">
                        <i class="fas fa-city"></i> City
                    </a>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["RegionSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="sort-link">
                        <i class="fas fa-map-marker-alt"></i> Region
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Farmers Grid -->
    <div class="farmers-section">
        <div class="farmers-content">
            @if (Model.Any())
            {
                <div class="farmers-grid">
                    @foreach (var farmer in Model)
                    {
                        <div class="farmer-item">
                            <div class="farmer-card">
                                <div class="card-header">
                                    <div class="farm-info">
                                        <h3 class="farm-name">@farmer.FarmName</h3>
                                        <p class="location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            @farmer.City, @farmer.Region
                                        </p>
                                    </div>
                                    <div class="profile-image-container">
                                        @if (!string.IsNullOrEmpty(farmer.ProfileImage))
                                        {
                                            <img src="@farmer.ProfileImage" alt="@farmer.FarmName Profile" class="profile-image" />
                                        }
                                        else
                                        {
                                            <div class="no-image">
                                                <i class="fas fa-user-tie"></i>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(farmer.Description))
                                    {
                                        <p class="description">
                                            @(farmer.Description.Length > 120 ? farmer.Description.Substring(0, 120) + "..." : farmer.Description)
                                        </p>
                                    }

                                    <div class="contact-info">
                                        @if (!string.IsNullOrEmpty(farmer.PhoneNumber))
                                        {
                                            <div class="info-item">
                                                <i class="fas fa-phone info-icon"></i>
                                                <span class="info-text">@farmer.PhoneNumber</span>
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(farmer.Address))
                                        {
                                            <div class="info-item">
                                                <i class="fas fa-home info-icon"></i>
                                                <span class="info-text">@farmer.Address</span>
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(farmer.ZipCode))
                                        {
                                            <div class="info-item">
                                                <i class="fas fa-mail-bulk info-icon"></i>
                                                <span class="info-text">@farmer.ZipCode</span>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="card-actions">
                                    <!-- View Details (available to everyone) -->
                                    <a asp-action="Details" asp-route-id="@farmer.FarmerID" class="btn btn-outline-primary">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>

                                    <a asp-controller="FarmerProducts" asp-action="Index" asp-route-searchString="@farmer.FarmName" class="btn btn-outline-success">
                                        <i class="fas fa-seedling"></i> View Products
                                    </a>

                                    <!-- Admin/Farmer Controls -->
                                    @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                                    {
                                        <div class="admin-actions">
                                            <a asp-action="Edit" asp-route-id="@farmer.FarmerID" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@farmer.FarmerID" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="pagination-wrapper">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@(Model.PageIndex - 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@(Model.PageIndex + 1)"
                                       asp-route-searchString="@ViewData["CurrentFilter"]"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="pagination-info">
                        Showing page @Model.PageIndex of @Model.TotalPages
                        (@Model.Count() farmers on this page)
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-tractor"></i>
                    </div>
                    <h3>No Farmers Found</h3>
                    <p>No farmers match your search criteria. Try adjusting your search terms.</p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Farmer"))
                    {
                        <a asp-action="Create" class="btn btn-primary">Add First Farmer</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

